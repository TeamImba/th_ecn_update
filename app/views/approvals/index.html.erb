<h1>Listing approvals</h1>

<table>
  <tr>
    <th>User</th>
    <th>Ecn</th>
    <th>Approval timestamp</th>
    <th>Status</th>
    <th>Pos</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @approvals.each do |approval| %>
  <tr>
    <td><%= approval.user_id %></td>
    <td><%= approval.ecn_id %></td>
    <td><%= approval.approval_timestamp %></td>
    <td><%= approval.status %></td>
    <td><%= approval.pos_id %></td>
    <td><%= link_to 'Show', approval %></td>
    <td><%= link_to 'Edit', edit_approval_path(approval) %></td>
    <td><%= link_to 'Destroy', approval, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

