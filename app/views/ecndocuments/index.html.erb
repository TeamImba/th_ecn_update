<div id="tabs" style="width:75%; float:left; margin:5px;">
  <ul>
      <li><a href="#tab-1"><span>Queued Documents</span></a></li>
      <li><a href="#tab-2"><span>Approved Documents</span></a></li>
      <li><a href="#tab-3"><span>Disapproved Documents</span></a></li>
      <li><a href="#tab-4"><span>Pending Documents</span></a></li>
  </ul>
  <div id="tab-1">
    <% @status = true %>
    <%=render :partial => "list", :locals => { :list => @queued } %>
  </div>
  <div id="tab-2">
    <% @status = false %>
    <%=render :partial => "list", :locals => { :list => @approved } %>
  </div>
  <div id="tab-3">
    <%=render :partial => "list", :locals => { :list => @disapproved } %>
  </div>
  <div id="tab-4">
    <%=render :partial => "list", :locals => { :list => @pending } %>
  </div>
</div>

<div id="tabs2" style="width:20%; margin:5px; float:left;">
  <ul>
    <li><a href="#tab-5"><span>Pending Summary</span></a></li>
  </ul>
  <div id="tab-5">
    <table width="100%" border="1" cellspacing="0" cellpadding="2" bordercolor="#000000" class="myTable">
      <tr>
        <th class="table_head">Department</th>
        <th class="table_head"></th>
      </tr>
      <% for ps in @pending_summary %>
      <tr>
        <td><%= ps[0] %></td>
        <td><%= ps[1] %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


<script>
  $(document).ready(function() {
    $("#tabs").tabs();
    $("#tabs2").tabs();
  });
</script>